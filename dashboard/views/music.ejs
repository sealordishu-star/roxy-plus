<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Roxy+ Music</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        .music-container {
            width: 95%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            color: #fff;
            padding-bottom: 100px;
        }

        .music-grid {
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: 30px;
        }

        .card {
            background: rgba(19, 19, 26, 0.7);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 24px;
            padding: 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            height: 100%;
            min-height: 500px;
            position: relative;
            overflow: hidden;
        }

        /* Disconnected State */
        .join-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
            width: 100%;
            max-width: 400px;
        }

        .join-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .join-desc {
            color: #888;
            margin-bottom: 20px;
        }

        .select-box {
            width: 100%;
            padding: 15px;
            background: #0b0b10;
            border: 1px solid #333;
            color: #fff;
            border-radius: 12px;
            font-family: 'Outfit', sans-serif;
            appearance: none;
            cursor: pointer;
            transition: 0.2s;
        }

        .select-box:hover {
            border-color: #8a2be2;
        }

        .btn-join {
            display: inline-block;
            background: linear-gradient(135deg, #8a2be2, #6c5ce7);
            color: #fff;
            padding: 15px;
            border-radius: 12px;
            border: none;
            font-weight: 700;
            cursor: pointer;
            transition: 0.3s;
            font-size: 1rem;
            box-shadow: 0 4px 15px rgba(138, 43, 226, 0.4);
        }

        .btn-join:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(138, 43, 226, 0.6);
        }

        /* Playing State */
        .guild-badge {
            position: absolute;
            top: 20px;
            left: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
            background: rgba(0, 0, 0, 0.6);
            padding: 8px 15px;
            border-radius: 30px;
            border: 1px solid transparent;
        }

        .guild-icon {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            object-fit: cover;
        }

        .guild-info {
            font-size: 0.9rem;
            font-weight: 500;
            color: #ccc;
        }

        .channel-name {
            color: var(--neon-purple);
            font-weight: 700;
            margin-left: 5px;
        }

        .art-wrapper {
            width: 280px;
            height: 280px;
            margin-bottom: 30px;
            position: relative;
        }

        .track-art {
            width: 100%;
            height: 100%;
            border-radius: 20px;
            object-fit: cover;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
            transition: transform 0.5s;
        }

        .track-art.playing {
            transform: scale(1.05);
            box-shadow: 0 15px 50px rgba(138, 43, 226, 0.4);
        }

        .track-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 5px;
            max-width: 90%;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            background: linear-gradient(to right, #fff, #a29bfe);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .track-artist {
            font-size: 1.1rem;
            color: #888;
            margin-bottom: 30px;
            font-weight: 400;
        }

        .progress-wrapper {
            width: 100%;
            max-width: 500px;
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 30px;
        }

        .time-text {
            font-size: 0.85rem;
            color: #aaa;
            font-family: monospace;
            min-width: 45px;
        }

        .progress-container {
            flex: 1;
            height: 8px;
            background: #333;
            border-radius: 10px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: #8a2be2;
            width: 0%;
            border-radius: 10px;
            transition: width 0.5s linear;
            box-shadow: 0 0 15px #8a2be2;
        }

        .controls {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 30px;
        }

        .btn-control {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            font-size: 1.5rem;
            cursor: pointer;
            transition: 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            border: none;
            outline: none;
            color: white;
        }

        .btn-control:hover {
            transform: scale(1.1);
        }

        .btn-control svg {
            width: 24px;
            height: 24px;
            fill: currentColor;
        }

        .btn-prev {
            background: rgba(52, 152, 219, 0.1);
            color: #3498db;
            border: 1px solid rgba(52, 152, 219, 0.3);
        }

        .btn-prev:hover {
            background: #3498db;
            color: white;
            box-shadow: 0 5px 15px rgba(52, 152, 219, 0.4);
        }

        .btn-stop {
            background: rgba(255, 71, 87, 0.1);
            color: #ff4757;
            border: 1px solid rgba(255, 71, 87, 0.3);
        }

        .btn-stop:hover {
            background: #ff4757;
            color: white;
            box-shadow: 0 5px 15px rgba(255, 71, 87, 0.4);
        }

        .btn-skip {
            background: rgba(46, 204, 113, 0.1);
            color: #2ecc71;
            border: 1px solid rgba(46, 204, 113, 0.3);
        }

        .btn-skip:hover {
            background: #2ecc71;
            color: white;
            box-shadow: 0 5px 15px rgba(46, 204, 113, 0.4);
        }

        .extra-controls {
            display: flex;
            gap: 15px;
            justify-content: center;
            margin-top: 10px;
        }

        .btn-action {
            padding: 12px 25px;
            border-radius: 50px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            cursor: pointer;
            transition: 0.2s;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .btn-action:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: scale(1.05);
        }

        .btn-leave {
            color: #ff4757;
            border-color: rgba(255, 71, 87, 0.2);
        }

        .btn-leave:hover {
            background: rgba(255, 71, 87, 0.1);
        }

        /* Queue */
        .queue-card {
            background: rgba(19, 19, 26, 0.8);
            border-radius: 20px;
            padding: 25px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .queue-header {
            font-size: 1.2rem;
            font-weight: 700;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding-bottom: 15px;
        }

        .queue-list {
            overflow-y: auto;
            flex: 1;
            padding-right: 5px;
            max-height: 500px;
        }

        .queue-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.02);
            margin-bottom: 8px;
            transition: 0.2s;
        }

        .queue-item:hover {
            background: rgba(255, 255, 255, 0.05);
        }

        .q-img {
            width: 45px;
            height: 45px;
            border-radius: 8px;
            object-fit: cover;
        }

        .q-info {
            flex: 1;
            overflow: hidden;
        }

        .q-title {
            font-size: 0.9rem;
            font-weight: 600;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            color: #ddd;
        }

        .q-author {
            font-size: 0.8rem;
            color: #777;
        }

        /* Play Modal */
        .modal {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.8);
            z-index: 1000;
            display: none;
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(5px);
        }

        .modal-content {
            background: #1a1a20;
            padding: 30px;
            border-radius: 20px;
            width: 500px;
            border: 1px solid #333;
            box-shadow: 0 0 50px rgba(0, 0, 0, 0.8);
        }

        .modal h2 {
            margin-top: 0;
            margin-bottom: 20px;
            font-size: 1.5rem;
        }

        .input-play {
            width: 100%;
            padding: 15px;
            background: #0b0b10;
            border: 1px solid #333;
            color: #fff;
            border-radius: 12px;
            margin-bottom: 20px;
            font-family: 'Outfit', sans-serif;
            font-size: 1rem;
            box-sizing: border-box;
        }

        .input-play:focus {
            outline: none;
            border-color: #8a2be2;
        }

        .modal-btns {
            display: flex;
            gap: 15px;
        }

        .btn-modal {
            flex: 1;
            padding: 12px;
            border-radius: 12px;
            border: none;
            cursor: pointer;
            font-weight: bold;
            font-size: 1rem;
            transition: 0.2s;
        }

        .btn-confirm {
            background: #8a2be2;
            color: white;
            box-shadow: 0 4px 15px rgba(138, 43, 226, 0.3);
        }

        .btn-confirm:hover {
            background: #9b59b6;
            box-shadow: 0 6px 20px rgba(138, 43, 226, 0.5);
        }

        .btn-cancel {
            background: #333;
            color: #ccc;
        }

        .btn-cancel:hover {
            background: #444;
            color: white;
        }

        @media(max-width: 900px) {
            .music-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

<body>
    <div class="music-container">

        <!-- JOIN UI (Disconnected) -->
        <div id="joinUI" class="card" style="display: none;">
            <div class="join-title">ðŸŽµ Join a Channel</div>
            <div class="join-desc">Select a server and voice channel to start listening.</div>
            <div class="join-container">
                <select id="serverSelect" class="select-box" onchange="loadChannels()">
                    <option value="">Select Server</option>
                </select>
                <select id="channelSelect" class="select-box">
                    <option value="">Select Voice Channel</option>
                </select>
                <button class="btn-join" onclick="joinChannel()">Join Voice</button>
            </div>
        </div>

        <!-- IDLE UI (Connected, No Music) -->
        <div id="idleUI" class="card" style="display: none;">
            <div class="guild-badge">
                <img id="idleGuildIcon" src="" class="guild-icon">
                <div class="guild-info">
                    <span id="idleGuildName">Guild</span> â€¢ <span id="idleChannelName"
                        class="channel-name">#Channel</span>
                </div>
            </div>
            <div class="join-title" style="margin-top: 50px;">Ready to Play</div>
            <div class="join-desc">Connected to voice. Add a song to start.</div>
            <button class="btn-join" onclick="openPlayModal()" style="width: 200px;">Play Music</button>
            <button class="btn-action btn-leave" onclick="leaveChannel()" style="margin-top: 20px;">Leave Voice</button>
        </div>

        <!-- PLAYER UI (Playing) -->
        <div class="music-grid" id="playerUI" style="display: none;">
            <div class="card">
                <div class="guild-badge">
                    <img id="guildIcon" src="" class="guild-icon">
                    <div class="guild-info">
                        <span id="guildName">Guild</span> â€¢ <span id="channelName" class="channel-name">#Channel</span>
                    </div>
                </div>

                <div class="art-wrapper">
                    <img id="trackCover" src="" class="track-art playing">
                </div>

                <h1 id="trackTitle" class="track-title">Loading...</h1>
                <div id="trackArtist" class="track-artist">Please wait</div>

                <div class="progress-wrapper">
                    <div id="currTime" class="time-text">0:00</div>
                    <div class="progress-container">
                        <div id="progressBar" class="progress-fill"></div>
                    </div>
                    <div id="totalTime" class="time-text">0:00</div>
                </div>

                <div class="volume-container"
                    style="display: flex; align-items: center; gap: 15px; margin-bottom: 25px; width: 100%; max-width: 350px; background: rgba(255,255,255,0.05); padding: 10px 20px; border-radius: 30px;">
                    <svg viewBox="0 0 24 24" style="width:24px; height:24px; fill:#ccc;">
                        <path
                            d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z" />
                    </svg>
                    <input type="range" id="volumeSlider" min="0" max="200" value="100"
                        style="flex:1; cursor: pointer; accent-color: #8a2be2; height: 5px; border-radius: 5px;">
                    <span id="volumeValue"
                        style="color:#fff; font-family:monospace; font-weight:bold; min-width: 45px; text-align: right;">100%</span>
                </div>

                <div class="controls">
                    <button class="btn-control btn-prev" onclick="prevSong()" title="Previous"><svg viewBox="0 0 24 24">
                            <path d="M6 6h2v12H6zm3.5 6l8.5 6V6z" />
                        </svg></button>
                    <button class="btn-control btn-stop" onclick="stopMusic()" title="Stop"><svg viewBox="0 0 24 24">
                            <path d="M6 6h12v12H6z" />
                        </svg></button>
                    <button class="btn-control btn-skip" onclick="skipSong()" title="Skip"><svg viewBox="0 0 24 24">
                            <path d="M6 18l8.5-6L6 6v12zM16 6v12h2V6h-2z" />
                        </svg></button>
                </div>

                <!-- Extra Controls Removed as per request -->
            </div>

            <div class="queue-card">
                <div class="queue-header">
                    <span>Up Next</span>
                    <span id="queueCount"
                        style="background:#8a2be2; padding:2px 8px; border-radius:6px; font-size:0.8rem;">0</span>
                </div>
                <div id="queueList" class="queue-list"></div>
            </div>
        </div>
    </div>

    <!-- Play Modal -->
    <div id="playModal" class="modal">
        <div class="modal-content">
            <h2>Play Music</h2>
            <input type="text" id="playInput" class="input-play" placeholder="Enter song name or link..."
                onkeypress="handleEnter(event)">
            <div class="modal-btns">
                <button class="btn-modal btn-confirm" onclick="playSong()">Play / Add</button>
                <button class="btn-modal btn-cancel"
                    onclick="document.getElementById('playModal').style.display='none'">Cancel</button>
            </div>
        </div>
    </div>

    <%- include('partials/super_button') %>

        <script>
            let currentGuildId = null;
            let isDraggingVolume = false;

            function formatTime(ms) {
                if (isNaN(ms)) return '0:00';
                const totalSeconds = Math.max(0, Math.floor(ms / 1000));
                const minutes = Math.floor(totalSeconds / 60);
                const seconds = totalSeconds % 60;
                return `${minutes}:${seconds.toString().padStart(2, '0')}`;
            }

            async function updateState() {
                try {
                    const res = await fetch('/api/music/status');
                    const data = await res.json();

                    const joinUI = document.getElementById('joinUI');
                    const idleUI = document.getElementById('idleUI');
                    const playerUI = document.getElementById('playerUI');

                    if (data.isPlaying) {
                        // Show Player, Hide others
                        joinUI.style.display = 'none';
                        idleUI.style.display = 'none';
                        playerUI.style.display = 'grid'; // Grid layout

                        currentGuildId = data.activeGuildId;
                        updatePlayerUI(data);
                    } else if (data.isConnectedToVoice) {
                        // Show Idle, Hide others
                        joinUI.style.display = 'none';
                        playerUI.style.display = 'none';
                        idleUI.style.display = 'flex';

                        currentGuildId = data.activeGuildId;
                        document.getElementById('idleGuildName').innerText = data.guildName;
                        document.getElementById('idleChannelName').innerText = data.channelName;
                        document.getElementById('idleGuildIcon').src = data.guildIcon || 'https://cdn.discordapp.com/embed/avatars/0.png';
                    } else {
                        // Show Join, Hide others
                        playerUI.style.display = 'none';
                        idleUI.style.display = 'none';
                        joinUI.style.display = 'flex';

                        currentGuildId = null;
                        if (document.getElementById('serverSelect').children.length <= 1) loadServers();
                    }
                } catch (e) { }
            }

            function updatePlayerUI(data) {
                document.getElementById('guildName').innerText = data.guildName;
                document.getElementById('channelName').innerText = data.channelName;
                document.getElementById('guildIcon').src = data.guildIcon || 'https://cdn.discordapp.com/embed/avatars/0.png';

                document.getElementById('trackTitle').innerText = data.nowPlaying.title;
                document.getElementById('trackArtist').innerText = data.nowPlaying.author;
                document.getElementById('trackCover').src = data.nowPlaying.cover;

                const percent = data.duration ? Math.min(100, (data.position / data.duration) * 100) : 0;
                document.getElementById('progressBar').style.width = percent + '%';
                document.getElementById('currTime').innerText = formatTime(data.position);
                document.getElementById('totalTime').innerText = formatTime(data.duration);

                if (!isDraggingVolume) {
                    const vol = data.volume !== undefined ? data.volume : 100;
                    document.getElementById('volumeSlider').value = vol;
                    document.getElementById('volumeValue').innerText = vol + '%';
                }

                document.getElementById('queueCount').innerText = data.queueCount;
                const list = document.getElementById('queueList');
                list.innerHTML = '';

                if (data.queue.length === 0) list.innerHTML = '<div style="text-align:center; color:#555; margin-top:20px;">Queue is empty</div>';
                else {
                    data.queue.forEach((song, i) => {
                        const cover = song.cover || 'https://i.imgur.com/2ce2t5e.png';
                        list.innerHTML += `
                     <div class="queue-item">
                         <div style="font-weight:bold; width:20px; color:#555;">${i + 1}</div>
                         <img src="${cover}" class="q-img">
                         <div class="q-info">
                             <div class="q-title">${song.title}</div>
                             <div class="q-author">${song.author}</div>
                         </div>
                     </div>`;
                    });
                }
            }

            // --- Interaction Logic ---

            async function loadServers() {
                const res = await fetch('/api/discord/guilds');
                const guilds = await res.json();
                const sel = document.getElementById('serverSelect');
                sel.innerHTML = '<option value="">Select Server</option>';
                guilds.forEach(g => {
                    sel.innerHTML += `<option value="${g.id}">${g.name}</option>`;
                });
            }

            async function loadChannels() {
                const guildId = document.getElementById('serverSelect').value;
                const sel = document.getElementById('channelSelect');
                if (!guildId) { sel.innerHTML = '<option value="">Select Voice Channel</option>'; return; }

                sel.innerHTML = '<option>Loading...</option>';
                const res = await fetch(`/api/discord/channels/${guildId}`);
                const channels = await res.json();
                sel.innerHTML = '<option value="">Select Voice Channel</option>';
                channels.forEach(c => {
                    sel.innerHTML += `<option value="${c.id}">${c.name}</option>`;
                });
            }

            async function joinChannel() {
                const guildId = document.getElementById('serverSelect').value;
                const channelId = document.getElementById('channelSelect').value;
                if (!guildId || !channelId) return alert('Select server and channel');

                const btn = document.querySelector('.btn-join');
                btn.innerText = 'Joining...';
                await fetch('/api/music/join', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ guildId, channelId })
                });
                // State update automatic
                setTimeout(() => { btn.innerText = 'Join Voice'; }, 3000);
            }

            async function leaveChannel() {
                if (!currentGuildId) return;
                await fetch('/api/music/leave', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ guildId: currentGuildId })
                });
            }

            function openPlayModal() {
                document.getElementById('playModal').style.display = 'flex';
                document.getElementById('playInput').focus();
            }

            function handleEnter(e) { if (e.key === 'Enter') playSong(); }

            async function playSong() {
                const query = document.getElementById('playInput').value;
                if (!query) return;
                if (!currentGuildId) return alert('Error: No active guild');

                const btn = document.querySelector('.btn-confirm');
                const originalText = btn.innerText;
                btn.innerText = 'Searching...';

                try {
                    const res = await fetch('/api/music/play', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ guildId: currentGuildId, query })
                    });
                    const result = await res.json();

                    if (result.success) {
                        btn.innerText = 'Added!';
                        setTimeout(() => {
                            document.getElementById('playModal').style.display = 'none';
                            document.getElementById('playInput').value = '';
                            btn.innerText = originalText;
                        }, 1000);
                        updateState();
                    } else {
                        alert('Error: ' + (result.message || 'Failed'));
                        btn.innerText = originalText;
                    }
                } catch (e) {
                    alert('Network error');
                    btn.innerText = originalText;
                }
            }

            async function skipSong() { await fetch('/api/music/skip', { method: 'POST' }); updateState(); }
            async function prevSong() { await fetch('/api/music/previous', { method: 'POST' }); updateState(); }
            async function stopMusic() { if (confirm('Stop music?')) await fetch('/api/music/stop', { method: 'POST' }); updateState(); }

            // Volume Logic
            const vSlider = document.getElementById('volumeSlider');
            vSlider.addEventListener('mousedown', () => isDraggingVolume = true);
            vSlider.addEventListener('touchstart', () => isDraggingVolume = true);

            async function sendVolume() {
                if (!currentGuildId) return;
                const vol = vSlider.value;
                try {
                    await fetch('/api/music/volume', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ guildId: currentGuildId, volume: vol })
                    });
                } catch (e) { }
                setTimeout(() => isDraggingVolume = false, 500);
            }

            vSlider.addEventListener('mouseup', sendVolume);
            vSlider.addEventListener('touchend', sendVolume);
            vSlider.addEventListener('change', sendVolume);

            vSlider.addEventListener('input', function () {
                document.getElementById('volumeValue').innerText = this.value + '%';
            });

            setInterval(updateState, 1000);
            updateState();
        </script>
</body>

</html>