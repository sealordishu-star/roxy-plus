                </div>
            </div>
        </div>
    </div>

    <%- include('partials/super_button') %>

        <script>
            function openCard(el, type) {
                // Prevent multiple clicks
                if (el.classList.contains('animating')) return;
                el.classList.add('animating');

                // Create Clone
                const rect = el.getBoundingClientRect();
                const clone = el.cloneNode(true);

                // Reset transform on clone (since hover/active might have changed it slightly)
                clone.style.transform = 'none';

                // Style Clone
                clone.classList.add('card-clone');
                clone.style.top = rect.top + 'px';
                clone.style.left = rect.left + 'px';
                clone.style.width = rect.width + 'px';
                clone.style.height = rect.height + 'px';
                clone.style.margin = '0';
                clone.style.borderRadius = '24px';
                clone.style.background = '#13131a'; // Match card/page bg

                // Append to Body
                document.body.appendChild(clone);

                // Hide Original temporarily
                el.style.opacity = '0';

                // Animate
                requestAnimationFrame(() => {
                    clone.style.top = '0';
                    clone.style.left = '0';
                    clone.style.width = '100vw';
                    clone.style.height = '100vh';
                    clone.style.borderRadius = '0';
                    clone.style.padding = '50px'; // Add padding to animate content shifting if wanted

                    // Fade out the content of the clone? Or keep it?
                    // "App Opening" usually keeps the icon/colors.
                    // We'll keep it, and fade into new page which is dark anyway.
                });

                // Navigate after animation
                setTimeout(() => {
                    window.location.href = '/commands/' + type;
                }, 500);
            }

            // Handle Back Navigation (Browser Back)
            window.addEventListener('pageshow', (event) => {
                if (event.persisted) {
                    // Restore state if coming from cache
                    document.querySelectorAll('.cmd-card').forEach(c => c.style.opacity = '1');
                    const clone = document.querySelector('.card-clone');
                    if (clone) clone.remove();
                }
            });
        </script>
</body>

</html>